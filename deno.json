{
  "name": "@ursamu/ursamu",
  "version": "0.4.22",
  "description": "A modern, high-performance MUSH-like engine built with TypeScript and Deno.",
  "exports": {
    ".": "./mod.ts",
    "./cli": "./src/cli/ursamu.ts",
    "./start": "./src/cli/start.ts"
  },
  "publish": {
    "include": [
      "src",
      "mod.ts",
      "deno.json",
      "deps.ts",
      "LICENSE",
      "README.md",
      "text",
      "help"
    ],
    "exclude": ["tests", "data"]
  },
  "tasks": {
    "start": "bash ./scripts/run.sh",
    "server": "deno run -A --unstable-detect-cjs --unstable-kv ./src/main.ts",
    "telnet": "deno run -A --unstable-detect-cjs --unstable-kv ./src/telnet.ts",
    "config": "deno run -A ./src/cli/config.ts",
    "setup-config": "bash ./scripts/setup-config.sh",
    "create-plugin": "bash ./scripts/create-plugin.sh",
    "create": "deno run -A ./src/cli/create.ts",
    "cli": "deno run -A ./src/cli/ursamu.ts",
    "install-cli": "deno install --allow-all --name ursamu --global --force ./src/cli/ursamu.ts",
    "test": "deno test --allow-read --allow-env --allow-write --unstable-kv",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A main.ts"
  },
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "imports": {
    "ursamu": "./mod.ts",
    "ursamu/": "./",
    "lume": "https://deno.land/x/lume@v2.2.0/mod.ts",
    "lume/": "https://deno.land/x/lume@v2.2.0/",
    "@std/flags": "jsr:@std/flags@^0.224.0",
    "@std/path": "jsr:@std/path@^0.224.0",
    "@std/fs": "jsr:@std/fs@^0.224.0",
    "@std/assert": "jsr:@std/assert@^0.224.0",
    "$fresh/": "https://deno.land/x/fresh@1.7.3/",
    "preact": "https://esm.sh/preact@10.22.0",
    "preact/jsx-runtime": "npm:preact@10.22.0/jsx-runtime",
    "preact/hooks": "npm:preact@10.22.0/hooks",
    "preact/": "https://esm.sh/preact@10.22.0/",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
    "$std/": "jsr:@std/std@^0.224.0/",
    "bcrypt": "npm:bcryptjs@2.4.3",
    "lodash": "npm:lodash-es@4.17.21",
    "djwt": "jsr:@zaubrik/djwt@^3.0.2",
    "quickjs-emscripten": "npm:quickjs-emscripten@0.29.0",
    "@ursamu/parser": "npm:@ursamu/parser@1.2.4",
    "dotenv": "jsr:@std/dotenv@^0.224.0",
    "dotenv/": "jsr:@std/dotenv@^0.224.0/",
    "dotenv/load": "jsr:@std/dotenv@^0.224.0/load",
    "@digibear/tags": "npm:@digibear/tags@1.0.0",
    "@tailwindcss/typography": "npm:@tailwindcss/typography@^0.5.0"
  },
  "exclude": ["**/_fresh/*", "docs/_site", "config"],
  "lint": { "rules": { "tags": ["fresh", "recommended"] } }
}
