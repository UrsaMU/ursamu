{
  "name": "@ursamu/core",
  "version": "0.0.1",
  "description": "A Modern MUSH-Like Server",
  "main": "src/index.ts",
  "scripts": {
    "test": "jest",
    "telnet": "ts-node-dev src/telnet.ts",
    "server": "ts-node-dev --rs src/main.ts",
    "build": "rm -rf dist && tsc -p  tsconfig.json",
    "pm2:server": "pm2 start dist/main.js --name ursamu --watch /dist/main.js",
    "pm2:telnet": "pm2 start dist/telnet.js --name telnet",
    "start": "npm run build && npm run pm2:server && npm run pm2:telnet",
    "restart": "pm2 restart ursamu && pm2 restart telnet",
    "stop": "pm2 delete ursamu && pm2 delete telnet",
    "dev": "concurrently \"npm run telnet\" \"npm run server\""
  },
  "bin": {
    "ursamu": "./src/cli.ts"
  },
  "keywords": [
    "MUSH",
    "MUX",
    "MUD"
  ],
  "author": "Lenuel L. Canady, Jr",
  "license": "MIT",
  "dependencies": {
    "@digibear/tags": "^1.0.0",
    "@ursamu/parser": "^1.4.9",
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.1",
    "lodash": "^4.17.21",
    "mongodb": "^5.7.0",
    "mongoose": "^7.4.1",
    "nedb-promises": "^6.2.3",
    "pm2": "^5.3.0",
    "socket.io": "^4.7.1",
    "socket.io-client": "^4.7.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.3",
    "@types/uuid": "^9.0.2",
    "express": "^4.18.2",
    "i": "^0.3.7",
    "jest": "^29.7.0",
    "npm": "^10.9.0",
    "prettier": "^2.8.8",
    "socket.io-mock": "^1.3.2",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
