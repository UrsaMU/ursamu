{
  "name": "ursamu",
  "version": "0.0.1",
  "description": "A Modern MUSH-Like Server",
  "main": "dist/main.js",
  "scripts": {
    "test": "jest",
    "telnet": "ts-node-dev src/telnet.ts",
    "server": "ts-node-dev --rs src/main.ts",
    "build": "tsc -p  tsconfig.json",
    "pm2:server": "pm2 start dist/main.js --name ursamu --watch /dist/main.js",
    "pm2:telnet": "pm2 start dist/telnet.js --name telnet",
    "start": "npm run build && npm run pm2:server && npm run pm2:telnet",
    "restart": "pm2 restart ursamu && pm2 restart telnet",
    "stop": "pm2 delete ursamu && pm2 delete telnet"
  },
  "keywords": [
    "MUSH",
    "MUX",
    "MUD"
  ],
  "author": "Lenuel L. Canady, Jr",
  "license": "MIT",
  "dependencies": {
    "@digibear/tags": "^1.0.0",
    "@types/express-ws": "^3.0.1",
    "@types/ws": "^8.5.5",
    "@ursamu/parser": "^1.2.4",
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "nedb": "^1.8.0",
    "nedb-promises": "^6.2.1",
    "prettier": "^2.8.8",
    "socket.io": "^4.7.1",
    "socket.io-client": "^4.7.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/nedb": "^1.8.13",
    "@types/node": "^20.3.3",
    "@types/uuid": "^9.0.2",
    "express": "^4.18.2"
  }
}
